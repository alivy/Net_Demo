
@{
    ViewBag.Title = "MvcPageList";
}

<h2>MvcPageList</h2>

@using Webdiyer.WebControls.Mvc;
@model Webdiyer.WebControls.Mvc.PagedList<Web.Models.User_info>


<link href="~/Content/pagerstyles.css" rel="stylesheet" />
<table class="loan-table">
    <tr>
        <th>用户id</th>
        <th>用户名</th>
        <th>密码</th>
        <th>类型</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserID</td>
            <td>@item.User_Name</td>
            <td>@item.User_Pwd</td>
            <td>@item.User_Type</td>
        </tr>
    }
</table>

@Html.Pager(Model, new PagerOptions { FirstPageText = "首页", LastPageText = "末页", NextPageText = "下一页", PrevPageText = "上一页", PageIndexParameterName = "id", CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\">{0}</span>", Id = "diggpager" })



<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/respond.js"></script>